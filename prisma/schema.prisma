generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Continent {
  continent_id String @id @default(cuid())
  name         String
  costs        Int?
}

model Country {
  country_id    String          @id @default(cuid())
  name          String
  continent     String
  Country_costs Country_costs[]
}

model Country_costs {
  country_costs_id   String  @id @default(cuid())
  country_name       String
  country_id         Country @relation(fields: [country_costs_id], references: [country_id])
  country_id_ref     String
  costs_one_person   Int
  costs_family       Int
  hotel_cost_min     Int
  hotel_cost_max     Int
  apartment_cost_min Int
  apartment_cost_max Int
  dinner_cost        Int?
  car_rent           Int?
}

model City {
  city_id    String       @id @default(cuid())
  name       String
  costs      Int
  country    String
  image      String?
  city_costs City_costs[]
}

model City_costs {
  city_costs_id      String @id @default(cuid())
  city_name          String
  city_id            City   @relation(fields: [city_id_ref], references: [city_id])
  city_id_ref        String
  costs_one_person   Int
  costs_family       Int
  hotel_cost_min     Int
  hotel_cost_max     Int
  apartment_cost_min Int
  apartment_cost_max Int
  dinner_cost        Int?
  car_rent           Int?
}

model Post {
  post_id    String  @id @default(cuid())
  title      String
  content    String?
  published  Boolean @default(false)
  authorId   String?
  user_id    String
  city_id    String
  country_id String
}

model User {
  user_id        String   @id @default(cuid())
  email          String   @unique
  password       String?
  userName       String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  img            String?
  authProviderId String?
  role           String?
}

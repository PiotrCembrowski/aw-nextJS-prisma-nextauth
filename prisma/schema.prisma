generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Continent {
  id    String @id @default(cuid())
  name  String
  costs Int?
}

model Country {
  id        String @id @default(cuid())
  name      String
  costs     Int
  continent String
}

model City {
  id      String  @id @default(cuid())
  name    String
  costs   Int
  country String
  image   String?
}

model Post {
  id         String  @id @default(cuid())
  title      String
  content    String?
  published  Boolean @default(false)
  authorId   String?
  user_id    String
  city_id    String
  country_id String
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  password       String?
  userName       String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  img            String?
  authProviderId String?
  role           String?
}

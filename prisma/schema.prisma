generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Continent {
  continent_id String @id @default(cuid())
  name         String
  costs        Int?
}

model Country {
  country_id      String @id @default(cuid())
  name            String
  costs           Int
  continent       String
}

model Country_costs {
  country_costs_id  String @id @default(cuid())
  country_name      String
  country_id        Country @relation(fields: [country_costs_id], references: [country_id])
  country_id_ref    String
  costs             Int
  hotel_costs       Int
}

model City {
  city_id       String  @id @default(cuid())
  name          String
  costs         Int
  country       String
  image         String?
  city_costs_id String
}

model City_costs {
  city_costs_id   String @id @default(cuid())
  city_name       String
  costs           Int
  hotel_costs     Int
}

model Post {
  post_id    String  @id @default(cuid())
  title      String
  content    String?
  published  Boolean @default(false)
  authorId   String?
  user_id    String
  city_id    String
  country_id String
}

model User {
  user_id        String   @id @default(cuid())
  email          String   @unique
  password       String?
  userName       String?
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  img            String?
  authProviderId String?
  role           String?
}
